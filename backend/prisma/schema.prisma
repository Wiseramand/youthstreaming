generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  VIP
}

model User {
  id        String      @id @default(cuid())
  email     String      @unique
  password  String
  role      Role        @default(USER)
  profile   Profile?
  donations Donation[]
  streams   Stream[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Profile {
  id        String   @id @default(cuid())
  userId    String   @unique
  fullName  String
  avatarUrl String?
  bio       String?
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Donation {
  id         String   @id @default(cuid())
  amount     Float
  method     String
  identifier String?
  name       String?
  userId     String?
  user       User?    @relation(fields: [userId], references: [id])
  createdAt  DateTime @default(now())
}

model Stream {
  id          String   @id @default(cuid())
  title       String
  description String?
  sourceType  String   // "YOUTUBE" | "OBS"
  sourceUrl   String
  thumbnail   String
  category    String   @default("Geral")
  isLive      Boolean  @default(true)
  accessLevel String   // "PUBLIC" | "VIP"
  viewers     Int      @default(0)
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
